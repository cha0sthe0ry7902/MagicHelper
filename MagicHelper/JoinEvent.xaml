<Page x:Class="MagicHelper.JoinEvent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MagicHelper"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="1280"
      Title="JoinEvent">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/bg_joinevent.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#B23A3A3A">
            <TextBlock Text="Введите код турнира:" Margin="5"/>
            <TextBox TextAlignment="Center" Margin="5" Name="TxbEnterCode" MaxLength="7"/>
            <Button Content="Отправить заявку" FontSize="18" Margin="5" Name="BtnSendRequest" Click="BtnSendRequest_Click"/>
        </StackPanel>
    </Grid>
</Page>
