<Window x:Class="MagicHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicHelper"
        mc:Ignorable="d"
        Title="MagicHelper | Добро пожаловать" Height="720" Width="1280"
        MinHeight="720" MinWidth="1280">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/bg_welcome.jpg" Stretch="UniformToFill" TileMode="None"/>
        </Grid.Background>
        <StackPanel Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#B23A3A3A" Width="350">
            <TextBlock Margin="5" Text="Введите логин:"/>
            <TextBox Margin="5" Name="TxbxLogin" Width="auto"/>
            <TextBlock Margin="5" Text="Введите пароль:"/>
            <PasswordBox Margin="5" FontSize="18" Name="PsbxPassword" Width="auto"/>
            <Button Margin="5" Content="Войти" Name="BtnLogin" Click="BtnLogin_Click" Width="auto"/>
            <Button Margin="5" Content="Регистрация" Name="BtnRegistration" Click="BtnRegistration_Click" Width="auto"/>
        </StackPanel>
    </Grid>
</Window>
